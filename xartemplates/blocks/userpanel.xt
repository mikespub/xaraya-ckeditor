<?xml version="1.0"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
<xar:if condition="$showusername">
Welcome back,
<xar:if condition="$showaccount">
<a href="#xarModURL('roles', 'user', 'display', array('id' => $id))#">#$name#</a>
<xar:else />
<strong>#$name#</strong>
</xar:if>
</xar:if>
<ul>
    <xar:if condition="!empty($lastvisit)">
    <li>
        Last Visit:
        <strong>
        #xarLocaleGetFormattedTime('short', $lastvisit)#,
        #xarLocaleGetFormattedDate('medium', $lastvisit)#
        </strong>
    </li>
    </xar:if>
    <xar:if condition="!empty($timenow)">
    <li>
        Time Now:
        <strong>
        #xarLocaleGetFormattedTime('short', time())#,
        #xarLocaleGetFormattedDate('medium', time())#
        </strong>
    </li>
    </xar:if>
    <xar:if condition="!empty($visitstart)">
    <li>
        Visit Start:
        <strong>
        #xarLocaleGetFormattedTime('short', $visitstart)#
        </strong>
    </li>
    </xar:if>
    <xar:if condition="!empty($totalvisit)">
    <li>
        Visits<xar:if condition="!empty($numvisits)"> (#$numvisits#)</xar:if>:
        <strong>
        <xar:base-timesince stamp="$totalvisit" />
        </strong>
    </li>
    </xar:if>
    <xar:if condition="!empty($showwaiting)">
    <li>
        <a class="xar-error" href="#xarModURL('crispbb', 'user', 'moderate', array('component' => 'waiting'))#" title="#xarML('View Waiting Content')#">Waiting Content</a>
    </li>
    </xar:if>
    <xar:if condition="!empty($showlogout)">
    <li>
        <a href="#xarModURL('authsystem', 'user', 'logout')#" title="#xarML('Logout')#">Logout</a>
    </li>
    </xar:if>
</ul>
</xar:template>